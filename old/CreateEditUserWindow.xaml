<Window x:Class="FitControlAdmin.CreateEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Criar/Editar Utilizador" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText" Grid.Row="0" 
                   Text="Criar Utilizador" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Email:" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Margin="0,0,0,15" Padding="5" IsReadOnly="False"/>

                <TextBlock Text="Tipo:" Margin="0,0,0,5"/>
                <ComboBox x:Name="TipoComboBox" Margin="0,0,0,15" Padding="5">
                    <ComboBoxItem Content="Membro" IsSelected="True"/>
                    <ComboBoxItem Content="Funcionario"/>
                </ComboBox>

                <TextBlock Text="Nome:" Margin="0,0,0,5"/>
                <TextBox x:Name="NomeTextBox" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Telemóvel:" Margin="0,0,0,5"/>
                <TextBox x:Name="TelemovelTextBox" Margin="0,0,0,15" Padding="5"/>

                <StackPanel x:Name="MembroPanel" Margin="0,0,0,15">
                    <TextBlock Text="Data de Nascimento:" Margin="0,0,0,5"/>
                    <DatePicker x:Name="DataNascimentoDatePicker" Margin="0,0,0,15"/>

                    <TextBlock Text="ID Subscrição:" Margin="0,0,0,5"/>
                    <TextBox x:Name="IdSubscricaoTextBox" Padding="5"/>
                </StackPanel>

                <StackPanel x:Name="FuncionarioPanel" Visibility="Collapsed" Margin="0,0,0,15">
                    <TextBlock Text="Função:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="FuncaoComboBox" Padding="5">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Rececao"/>
                        <ComboBoxItem Content="PT"/>
                    </ComboBox>
                </StackPanel>

                <CheckBox x:Name="AtivoCheckBox" Content="Ativo" 
                          IsChecked="True" Margin="0,15,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="Guardar" 
                    Click="SaveButton_Click" 
                    Padding="15,5" Margin="0,0,10,0" Width="100"/>
            <Button Content="Cancelar" 
                    Click="CancelButton_Click" 
                    Padding="15,5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

