<Window x:Class="FitControlAdmin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FitControl Admin - Login" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="FitControl Admin" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Palavra-passe:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Padding="5"/>

            <TextBlock x:Name="ErrorMessage" Foreground="Red" 
                       TextWrapping="Wrap" Margin="0,0,0,10"
                       Visibility="Collapsed"/>

            <Button x:Name="LoginButton" Content="Entrar" 
                    Click="LoginButton_Click" 
                    Padding="10,5" FontSize="14" 
                    HorizontalAlignment="Stretch"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Conectado a: http://localhost:5295" 
                   FontSize="10" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>

