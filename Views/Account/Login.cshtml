@model TTFWebsite.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Login - Área de Membros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <a href="@Url.Action("Index", "Home")" style="text-decoration: none; color: inherit;">
                <h1>FitControl</h1>
            </a>
            <h2>Área de Membros</h2>
            <p>Faz login para acederes à tua área pessoal</p>
        </div>

        <form asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="o.teu.email@exemplo.pt" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Palavra-passe</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group checkbox-group">
                <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                <label for="rememberMe">Lembrar-me</label>
            </div>

            <button type="submit" class="btn-primary btn-block">Entrar</button>
        </form>

        <div class="login-footer">
            <p><a href="#" class="forgot-password-link">Esqueceste-te da tua palavra-passe?</a></p>
            <p class="demo-info">Demo: Use <strong>membro@fitcontrol.pt</strong> / <strong>123456</strong></p>
            <p class="registration-info">
                <strong>Nota:</strong> Os registos são feitos presencialmente no ginásio. 
                Se ainda não és membro, visita-nos para te inscreveres.
            </p>
        </div>
    </div>
</div>

<style>
.login-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    background: var(--bg-primary);
    background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.login-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        135deg,
        rgba(30, 31, 41, 0.85) 0%,
        rgba(30, 31, 41, 0.75) 50%,
        rgba(30, 31, 41, 0.85) 100%
    );
    z-index: 0;
}

.login-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 20% 50%, rgba(2, 172, 195, 0.2) 0%, transparent 60%),
                radial-gradient(circle at 80% 80%, rgba(2, 172, 195, 0.15) 0%, transparent 60%);
    z-index: 0;
    animation: subtlePulse 12s ease-in-out infinite;
}

@@keyframes subtlePulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

.login-box {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 3rem;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    position: relative;
    z-index: 1;
    backdrop-filter: blur(10px);
}

.login-header {
    text-align: center;
    margin-bottom: 2rem;
}

.login-header h1 {
    font-size: 3rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
}

.login-header h2 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.login-header p {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.login-form {
    margin-top: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    font-weight: 500;
}

.form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s;
}

.form-control:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(2, 172, 195, 0.1);
}

.checkbox-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.checkbox-group input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
}

.checkbox-group label {
    margin: 0;
    cursor: pointer;
}

.btn-block {
    width: 100%;
    margin-top: 1rem;
}

.login-footer {
    margin-top: 2rem;
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.login-footer a {
    color: var(--accent);
    text-decoration: none;
}

.forgot-password-link {
    color: var(--text-secondary);
    text-decoration: underline;
    cursor: pointer;
    transition: color 0.3s ease;
}

.forgot-password-link:hover {
    color: var(--accent);
    text-decoration: underline;
}

.demo-info {
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(2, 172, 195, 0.1);
    border-radius: 8px;
    border: 1px solid var(--accent);
    font-size: 0.85rem;
}

.registration-info {
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid var(--border);
    font-size: 0.85rem;
    text-align: center;
}

.registration-info strong {
    color: var(--accent);
}

.text-danger {
    color: var(--error);
    font-size: 0.875rem;
    margin-top: 0.25rem;
    display: block;
}
</style>

