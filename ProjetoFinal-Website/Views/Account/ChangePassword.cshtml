@model TTFWebsite.Controllers.ChangePasswordViewModel
@{
    ViewData["Title"] = "Alterar Palavra-passe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h1>FitControl</h1>
            <h2>Alterar Palavra-passe</h2>
            <p>Por favor, altere a sua palavra-passe</p>
        </div>

        @if (TempData["NeedsPasswordChange"] is bool needsPasswordChange && needsPasswordChange)
        {
            <div class="alert alert-warning">
                @TempData["Message"]
            </div>
        }

        <form asp-action="ChangePassword" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="CurrentPassword">Palavra-passe Atual</label>
                <div class="password-input-wrapper">
                    <input asp-for="CurrentPassword" type="password" class="form-control password-field" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required />
                    <button type="button" class="password-toggle" aria-label="Mostrar palavra-passe" title="Mostrar palavra-passe">
                        <span class="icon-eye">üëÅ</span>
                    </button>
                </div>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">Nova Palavra-passe</label>
                <div class="password-input-wrapper">
                    <input asp-for="NewPassword"
                           type="password"
                           class="form-control password-field"
                           placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                           required
                           minlength="12"
                           pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@@#$%\^&\*\?_~\-]).{12,}$"
                           title="M√≠nimo 12 caracteres, com mai√∫scula, min√∫scula, n√∫mero e s√≠mbolo (!@@#$%^&*?_~-)." />
                    <button type="button" class="password-toggle" aria-label="Mostrar palavra-passe" title="Mostrar palavra-passe">
                        <span class="icon-eye">üëÅ</span>
                    </button>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirmar Nova Palavra-passe</label>
                <div class="password-input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-control password-field" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required />
                    <button type="button" class="password-toggle" aria-label="Mostrar palavra-passe" title="Mostrar palavra-passe">
                        <span class="icon-eye">üëÅ</span>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Mensagens (valida√ß√£o/model errors) devem aparecer aqui, acima do bot√£o -->
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-below"></div>

            <button type="submit" class="btn-primary btn-block">Alterar Palavra-passe</button>
        </form>

        <div class="login-footer">
            <p><a href="@Url.Action("Dashboard", "Member")" class="forgot-password-link">Voltar ao Dashboard</a></p>
        </div>
    </div>
</div>

<style>
.login-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    background: var(--bg-primary);
    background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.login-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        135deg,
        rgba(30, 31, 41, 0.85) 0%,
        rgba(30, 31, 41, 0.75) 50%,
        rgba(30, 31, 41, 0.85) 100%
    );
    z-index: 0;
}

.login-box {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 3rem;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    position: relative;
    z-index: 1;
    backdrop-filter: blur(10px);
}

.login-header {
    text-align: center;
    margin-bottom: 2rem;
}

.login-header h1 {
    font-size: 3rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
}

.login-header h2 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.login-header p {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.login-form {
    margin-top: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    font-weight: 500;
}

.form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s;
}

.form-control:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(2, 172, 195, 0.1);
}

.password-input-wrapper {
    position: relative;
}
.password-input-wrapper .form-control {
    padding-right: 2.75rem;
}
.password-toggle {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0.25rem;
    cursor: pointer;
    font-size: 1.2rem;
    line-height: 1;
    color: var(--text-secondary);
    opacity: 0.8;
}
.password-toggle:hover {
    opacity: 1;
    color: var(--text-primary);
}
.password-toggle.active {
    color: #fff;
    opacity: 1;
}

.validation-summary-below {
    margin-top: 0.25rem;
    margin-bottom: 0.75rem;
}

.btn-block {
    width: 100%;
    margin-top: 1rem;
}

.login-footer {
    margin-top: 2rem;
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.login-footer a {
    color: var(--accent);
    text-decoration: none;
}

.forgot-password-link {
    color: var(--text-secondary);
    text-decoration: underline;
    cursor: pointer;
    transition: color 0.3s ease;
}

.forgot-password-link:hover {
    color: var(--accent);
    text-decoration: underline;
}

.text-danger {
    color: var(--error);
    font-size: 0.875rem;
    margin-top: 0.25rem;
    display: block;
}

.alert {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
}

.alert-warning {
    background: rgba(255, 193, 7, 0.1);
    border: 1px solid rgba(255, 193, 7, 0.3);
    color: #ffc107;
}

.alert-success {
    background: rgba(40, 167, 69, 0.1);
    border: 1px solid rgba(40, 167, 69, 0.3);
    color: #28a745;
}
</style>

<script>
    (function () {
        var wrappers = document.querySelectorAll('.password-input-wrapper');
        if (!wrappers || wrappers.length === 0) return;

        wrappers.forEach(function (wrapper) {
            var input = wrapper.querySelector('input[type="password"], input.password-field, input');
            var btn = wrapper.querySelector('.password-toggle');
            if (!input || !btn) return;

            btn.addEventListener('click', function (e) {
                e.preventDefault();
                if (input.type === 'password') {
                    input.type = 'text';
                    btn.setAttribute('aria-label', 'Ocultar palavra-passe');
                    btn.setAttribute('title', 'Ocultar palavra-passe');
                    btn.classList.add('active');
                } else {
                    input.type = 'password';
                    btn.setAttribute('aria-label', 'Mostrar palavra-passe');
                    btn.setAttribute('title', 'Mostrar palavra-passe');
                    btn.classList.remove('active');
                }
            });
        });
    })();
</script>

