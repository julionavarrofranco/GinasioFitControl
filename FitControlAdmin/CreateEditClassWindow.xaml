<Window x:Class="FitControlAdmin.CreateEditClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitControlAdmin"
        mc:Ignorable="d"
        Title="Criar Aula" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#272936"
        Foreground="#e6e6e8"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#95a5a6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#02acc3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#02acc3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#02acc3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#272936" BorderBrush="#34495E" BorderThickness="1" CornerRadius="10">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="{Binding TitleText}"
                         FontSize="24"
                         FontWeight="Bold"
                         Foreground="#e6e6e8"
                         HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Nome da Aula -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nome da Aula *"/>
                        <TextBox x:Name="NomeTextBox"
                                 Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Nome da aula"/>
                    </StackPanel>

                    <!-- Dia da Semana -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Dia da Semana *"/>
                        <ComboBox x:Name="DiaSemanaComboBox"
                                  SelectedValue="{Binding SelectedDiaSemana, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem Content="Segunda" Tag="Segunda"/>
                            <ComboBoxItem Content="Terça" Tag="Terca"/>
                            <ComboBoxItem Content="Quarta" Tag="Quarta"/>
                            <ComboBoxItem Content="Quinta" Tag="Quinta"/>
                            <ComboBoxItem Content="Sexta" Tag="Sexta"/>
                            <ComboBoxItem Content="Sábado" Tag="Sabado"/>
                            <ComboBoxItem Content="Domingo" Tag="Domingo"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Hora Início -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Hora de Início *"/>
                        <TextBox x:Name="HoraInicioTextBox"
                                 Text="{Binding HoraInicioText, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="HH:mm"/>
                    </StackPanel>

                    <!-- Hora Fim -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Hora de Fim *"/>
                        <TextBox x:Name="HoraFimTextBox"
                                 Text="{Binding HoraFimText, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="HH:mm"/>
                    </StackPanel>

                    <!-- Capacidade -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Capacidade *"/>
                        <TextBox x:Name="CapacidadeTextBox"
                                 Text="{Binding CapacidadeText, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Número máximo de alunos"/>
                    </StackPanel>

                    <!-- Instrutor -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Instrutor"/>
                        <ComboBox x:Name="FuncionarioComboBox"
                                  ItemsSource="{Binding Funcionarios}"
                                  DisplayMemberPath="Nome"
                                  SelectedValuePath="IdFuncionario"
                                  SelectedValue="{Binding SelectedFuncionarioId, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="#272936"/>
                                    <Setter Property="Foreground" Value="#e6e6e8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1f2937"/>
                                            <Setter Property="Foreground" Value="#e6e6e8"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#02acc3"/>
                                            <Setter Property="Foreground" Value="#e6e6e8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="CancelButton"
                        Content="Cancelar"
                        Background="#e74c3c"
                        Click="CancelButton_Click"
                        Margin="0,0,15,0"/>
                <Button x:Name="SaveButton"
                        Content="{Binding SaveButtonText}"
                        Background="#27AE60"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>