<Window x:Class="FitControlAdmin.CreatePhysicalEvaluationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Completar Avaliação Física"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1f2937"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Completar Avaliação Física"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#e6e6e8"
                   Margin="0,0,0,30"
                   HorizontalAlignment="Center"/>

        <!-- Peso -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Peso (kg) *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="PesoTextBox"
                     Background="#272936"
                     Foreground="#e6e6e8"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="14"/>
        </StackPanel>

        <!-- Altura -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Altura (m) *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="AlturaTextBox"
                     Background="#272936"
                     Foreground="#e6e6e8"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="14"/>
        </StackPanel>

        <!-- IMC -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="IMC *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ImcTextBox"
                     Background="#272936"
                     Foreground="#e6e6e8"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="14"/>
        </StackPanel>

        <!-- Massa Muscular -->
        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <TextBlock Text="Massa Muscular (kg) *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="MassaMuscularTextBox"
                     Background="#272936"
                     Foreground="#e6e6e8"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="14"/>
        </StackPanel>

        <!-- Massa Gorda -->
        <StackPanel Grid.Row="5" Margin="0,0,0,20">
            <TextBlock Text="Massa Gorda (kg) *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="MassaGordaTextBox"
                     Background="#272936"
                     Foreground="#e6e6e8"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="14"/>
        </StackPanel>

        <!-- Observações -->
        <StackPanel Grid.Row="6" Margin="0,0,0,20">
            <TextBlock Text="Observações"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ObservacoesTextBox"
                     Background="#272936"
                     Foreground="#e6e6e8"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="10,8"
                     FontSize="14"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="80"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="9"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="ConfirmButton"
                    Content="Confirmar"
                    Click="ConfirmButton_Click"
                    Padding="60,10"
                    Margin="0,0,70,0"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancelar"
                    Click="CancelButton_Click"
                    Padding="60,10"
                    Background="#e74c3c"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#e74c3c"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c0392b"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
