<Window x:Class="FitControlAdmin.Views.ViewTrainingPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FitControlAdmin.Converters"
        mc:Ignorable="d"
        Title="Ver Plano de Treino" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#313443"
        Foreground="#e6e6e8"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:EnumNameConverter x:Key="EnumNameConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#95a5a6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Nome do plano:" FontSize="11" Foreground="#7f8c8d"/>
            <TextBlock x:Name="NomeTextBlock" FontSize="18" FontWeight="Bold" Foreground="#e6e6e8"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Data de criação:" FontSize="11" Foreground="#7f8c8d"/>
                <TextBlock x:Name="DataCriacaoTextBlock" Foreground="#e6e6e8"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Estado:" FontSize="11" Foreground="#7f8c8d"/>
                <TextBlock x:Name="EstadoTextBlock" Foreground="#e6e6e8"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Observações:" FontSize="11" Foreground="#7f8c8d" Margin="0,0,0,5"/>
            <Border Background="#1f2937" Padding="12" CornerRadius="6" Margin="0,0,0,10">
                <TextBlock x:Name="ObservacoesTextBlock" TextWrapping="Wrap" Foreground="#e6e6e8"/>
            </Border>
            <TextBlock Text="Exercícios:" FontSize="14" FontWeight="Bold" Foreground="#e6e6e8" Margin="0,10,0,8"/>
            <DataGrid x:Name="ExercisesDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="#1f2937"
                      Foreground="#e6e6e8"
                      RowBackground="#1f2937"
                      AlternatingRowBackground="#252f3f"
                      BorderThickness="1"
                      BorderBrush="#34495E"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      MinHeight="120" SelectionChanged="ExercisesDataGrid_SelectionChanged">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="#FFE6E6E8"/>
                    </Style>

                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#ff1a4d5c"/>
                        <Setter Property="Foreground" Value="#e6e6e8"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ordem" Binding="{Binding Ordem}" Width="50"/>
                    <DataGridTextColumn Header="Exercício" Binding="{Binding NomeExercicio}" Width="*"/>
                    <DataGridTextColumn Header="Grupo" Binding="{Binding GrupoMuscular, Converter={StaticResource EnumNameConverter}}" Width="100"/>
                    <DataGridTextColumn Header="Séries" Binding="{Binding Series}" Width="60"/>
                    <DataGridTextColumn Header="Reps" Binding="{Binding Repeticoes}" Width="50"/>
                    <DataGridTextColumn Header="Carga" Binding="{Binding Carga}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Fechar"
                    Click="CloseButton_Click"
                    Padding="20,10"
                    Background="#34495E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
