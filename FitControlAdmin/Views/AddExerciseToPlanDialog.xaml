<Window x:Class="FitControlAdmin.Views.AddExerciseToPlanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Adicionar Exercício ao Plano" Height="520" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#313443"
        Foreground="#e6e6e8"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#95a5a6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        <Style TargetType="Button" x:Key="BtnPrimary">
            <Setter Property="Background" Value="#02acc3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="BtnSecondary">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Exercício:"/>
            <ComboBox x:Name="ExerciseComboBox"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="IdExercicio"
                      ItemContainerStyle="{StaticResource DefaultComboBoxItemStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Séries:"/>
            <TextBox x:Name="SeriesTextBox" Text="3"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Repetições:"/>
            <TextBox x:Name="RepsTextBox" Text="12"/>
        </StackPanel>

        <StackPanel Grid.Row="6">
            <TextBlock Text="Carga (kg):"/>
            <TextBox x:Name="CargaTextBox" Text="0"/>
        </StackPanel>

        <StackPanel Grid.Row="7">
            <TextBlock Text="Ordem (opcional):"/>
            <TextBox x:Name="OrdemTextBox" Text=""/>
        </StackPanel>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,15">
            <Button Content="Cancelar" Style="{StaticResource BtnSecondary}" Click="CancelButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="AddButton" Content="Adicionar" Style="{StaticResource BtnPrimary}" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
