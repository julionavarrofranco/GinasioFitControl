<Window x:Class="FitControlAdmin.Views.CreatePaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FitControlAdmin.Converters"
        Title="Criar Pagamento"
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#313443"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:EnumNameConverter x:Key="EnumNameConverter"/>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Criar Pagamento"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#e6e6e8"
                   Margin="0,0,0,30"
                   HorizontalAlignment="Center"/>

        <!-- Membro -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Membro *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <ComboBox x:Name="MembroComboBox"
                      Background="#272936"
                      Foreground="Black"
                      BorderBrush="#34495E"
                      BorderThickness="1"
                      Padding="10,8"
                      FontSize="14"
                      ItemContainerStyle="{StaticResource DefaultComboBoxItemStyle}">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nome}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

            </ComboBox>
        </StackPanel>

        <!-- Subscrição -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Subscrição *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <ComboBox x:Name="SubscricaoComboBox"
                      Margin="0,0,0,20"
                      Padding="12,10"
                      Background="#272936"
                      Foreground="Black"
                      BorderBrush="#34495E"
                      BorderThickness="1"
                      FontSize="14"
                      ItemContainerStyle="{StaticResource DefaultComboBoxItemStyle}">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nome}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>


            </ComboBox>

        </StackPanel>

        <!-- Método de Pagamento -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Método de Pagamento *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <ComboBox x:Name="MetodoPagamentoComboBox"
                      Margin="0,0,0,20"
                      Padding="12,10"
                      Background="#272936"
                      Foreground="Black"
                      BorderBrush="#34495E"
                      BorderThickness="1"
                      FontSize="14"
                      ItemContainerStyle="{StaticResource DefaultComboBoxItemStyle}">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

            </ComboBox>

        </StackPanel>

        <!-- Mês Referente -->
        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <TextBlock Text="Mês Referente *"
                       Foreground="#e6e6e8"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <DatePicker x:Name="MesReferenteDatePicker"
                        Background="#272936"
                        Foreground="#e6e6e8"
                        BorderBrush="#34495E"
                        BorderThickness="1"
                        Padding="10,8"
                        FontSize="14"
                        SelectedDateFormat="Short"
                        FirstDayOfWeek="Monday">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Foreground" Value="#e6e6e8"/>
                        <Setter Property="Background" Value="#272936"/>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,25,0,0">
            <Button x:Name="ConfirmButton"
                    Content="Confirmar"
                    Click="ConfirmButton_Click"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Width="120"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancelar"
                    Click="CancelButton_Click"
                    Padding="20,10"
                    Width="120"
                    Background="#34495E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#34495E"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3e50"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
