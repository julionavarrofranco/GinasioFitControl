<Window x:Class="FitControlAdmin.ScheduledClassesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitControlAdmin"
        mc:Ignorable="d"
        Title="Aulas Agendadas" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#313443"
        Foreground="#e6e6e8"
        FontFamily="Segoe UI"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#95a5a6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#02acc3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#039eb1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="DangerButton">
            <Setter Property="Background" Value="#e74c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2c3e50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="RowBackground" Value="#1f2937"/>
            <Setter Property="AlternatingRowBackground" Value="#252f3f"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#1f2937"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#02acc3"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Aulas Agendadas"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#e6e6e8"
                   Margin="0,0,0,20"/>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Gerar Aulas (2 semanas)"
                    Style="{StaticResource PrimaryButton}"
                    Click="GenerateClassesButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Criar Aula Agendada"
                    Style="{StaticResource SecondaryButton}"
                    Click="CreateScheduledClassButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Atualizar Lista"
                    Style="{StaticResource SecondaryButton}"
                    Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- DataGrid de Aulas Agendadas -->
        <DataGrid Grid.Row="2"
                  x:Name="ScheduledClassesDataGrid"
                  ItemsSource="{Binding}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdAulaMarcada}" Width="50"/>
                <DataGridTextColumn Header="Aula" Binding="{Binding NomeAula}" Width="150"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataAula, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Horário" Binding="{Binding HorarioFormatado}" Width="120"/>
                <DataGridTextColumn Header="Capacidade" Binding="{Binding CapacidadeFormatada}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#e6e6e8"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EstaLotada}" Value="True">
                                    <Setter Property="Foreground" Value="#e74c3c"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Instrutor" Binding="{Binding NomeInstrutor}" Width="*"/>
                <DataGridTemplateColumn Header="Ações" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Marcar Presenças"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="MarkAttendanceButton_Click"
                                        Tag="{Binding IdAulaMarcada}"
                                        Padding="10,5"
                                        Height="30"
                                        FontSize="12"
                                        Margin="0,0,5,0"/>
                                <Button Content="Eliminar"
                                        Style="{StaticResource DangerButton}"
                                        Click="DeleteScheduledClassButton_Click"
                                        Tag="{Binding IdAulaMarcada}"
                                        Padding="10,5"
                                        Height="30"
                                        FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
