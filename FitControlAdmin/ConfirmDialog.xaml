<Window x:Class="FitControlAdmin.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Logout" 
        Height="180" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#272936" CornerRadius="10" BorderBrush="#34495E" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Confirmar Logout" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="#e6e6e8"
                       Margin="0,0,0,15"/>

            <TextBlock Grid.Row="1" 
                       x:Name="MessageText"
                       Text="Tem certeza que deseja fazer logout?" 
                       FontSize="14"
                       Foreground="#e6e6e8"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="SimButton" 
                        Content="Sim" 
                        Width="80" 
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SimButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="NaoButton" 
                        Content="NÃ£o" 
                        Width="80" 
                        Height="35"
                        Background="#95a5a6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="NaoButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#95a5a6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7f8c8d"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

