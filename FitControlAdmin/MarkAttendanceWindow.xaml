<Window x:Class="FitControlAdmin.MarkAttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitControlAdmin"
        mc:Ignorable="d"
        Title="Marcar Presenças" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#313443"
        Foreground="#e6e6e8"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#95a5a6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#02acc3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#039eb1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2c3e50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Border" x:Key="InfoCard">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252f3f"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Marcar Presenças"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#e6e6e8"
                   Margin="0,0,0,20"/>

        <!-- Informações da Aula -->
        <Border Grid.Row="1" Style="{StaticResource InfoCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Aula:" FontSize="11" Foreground="#7f8c8d"/>
                    <TextBlock x:Name="ClassNameTextBlock" 
                               Text="Nome da Aula" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#e6e6e8"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Capacidade:" FontSize="11" Foreground="#7f8c8d"/>
                    <TextBlock x:Name="CapacityTextBlock" 
                               Text="0/30" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#02acc3"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Data:" FontSize="11" Foreground="#7f8c8d"/>
                    <TextBlock x:Name="DateTextBlock" 
                               Text="00/00/0000" 
                               FontSize="14"
                               Foreground="#e6e6e8"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Horário:" FontSize="11" Foreground="#7f8c8d"/>
                    <TextBlock x:Name="TimeTextBlock" 
                               Text="00:00 - 00:00" 
                               FontSize="14"
                               Foreground="#e6e6e8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista de Membros com Checkboxes -->
        <Border Grid.Row="2" 
                Background="#1f2937" 
                BorderBrush="#34495E" 
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="Lista de Membros (marque quem está presente):"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#e6e6e8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Marcar Todos"
                                Click="SelectAllButton_Click"
                                Background="Transparent"
                                Foreground="#02acc3"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="5"
                                Margin="0,0,10,0"/>
                        <Button Content="Desmarcar Todos"
                                Click="DeselectAllButton_Click"
                                Background="Transparent"
                                Foreground="#e74c3c"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="5"/>
                    </StackPanel>
                </Grid>

                <ListBox Grid.Row="2" 
                         x:Name="MembersListBox"
                         SelectionMode="Multiple"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#252f3f"
                                    CornerRadius="4"
                                    Padding="15,10"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding Presente, Mode=TwoWay}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding NomeMembro}" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#e6e6e8"/>
                                        <TextBlock Text="{Binding Email}" 
                                                   FontSize="11"
                                                   Foreground="#7f8c8d"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Presenca}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Foreground="#95a5a6"
                                               Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancelar"
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Guardar Presenças"
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
