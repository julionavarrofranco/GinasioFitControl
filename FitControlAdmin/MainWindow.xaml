<Window x:Class="FitControlAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FitControl - Gestor de Ginásio"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="SidebarButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView Style for Recent Activity -->
        <Style TargetType="{x:Type ListView}" x:Key="ActivityListViewStyle">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- GridViewColumnHeader Style -->
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="#1a4d5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#153d4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Role" Value="Floating">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListViewItem Style -->
        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0" 
                                Padding="{TemplateBinding Padding}"
                                Margin="0,1,0,0">
                            <GridViewRowPresenter Content="{TemplateBinding Content}" 
                                                  Columns="{TemplateBinding GridView.ColumnCollection}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2a3f4f"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1a4d5c"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style to match Dashboard table -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#323544"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#323544"/>
            <Setter Property="AlternatingRowBackground" Value="#323544"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#34495E"/>
            <Setter Property="VerticalGridLinesBrush" Value="#34495E"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- DataGridColumnHeader Style -->
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#1a4d5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#153d4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGridRow Style -->
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="#323544"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Margin="0,1,0,0">
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1" 
                                                       ItemsPanel="{TemplateBinding ItemsPanel}"
                                                       SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <DataGridDetailsPresenter Grid.Column="1" 
                                                         Grid.Row="1"
                                                         SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                         Visibility="{TemplateBinding DetailsVisibility}"/>
                                <DataGridRowHeader Grid.RowSpan="2" 
                                                  SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                  Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </SelectiveScrollingGrid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2a3f4f"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1a4d5c"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGridCell Style -->
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style for DataGrid -->
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border"
                                    Grid.Column="0"
                                    Width="18"
                                    Height="18"
                                    Background="#34495E"
                                    BorderBrush="#1a4d5c"
                                    BorderThickness="2"
                                    CornerRadius="2">
                                <Path x:Name="CheckMark"
                                      Data="M 0 5 L 5 10 L 12 0"
                                      Stroke="#27AE60"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#27AE60"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#27AE60"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#02acc3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu (Left) -->
        <Border Grid.Column="0" Background="#272936">
            <StackPanel>
                <!-- Header -->
                <Border Background="#272936" Padding="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="FitControl" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#e6e6e8"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="0,10,0,0">
                    <!-- Dashboard -->
                    <Button x:Name="BtnDashboard" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Dashboard" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Funcionários -->
                    <Button x:Name="BtnFuncionarios" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👨‍💼 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Funcionários" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Membros -->
                    <Button x:Name="BtnMembros" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Membros" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Subscrições -->
                    <Button x:Name="BtnSubscricoes" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Subscrições" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Pagamentos -->
                    <Button x:Name="BtnPagamentos" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💰 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Pagamentos" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Aulas -->
                    <Button x:Name="BtnAulas" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📚 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Aulas" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Exercícios -->
                    <Button x:Name="BtnExercicios" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💪 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Exercícios" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Avaliações Físicas -->
                    <Button x:Name="BtnAvaliacoesFisicas" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Avaliações Físicas" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Relatórios -->
                    <Button x:Name="BtnRelatorios" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Relatórios" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Atribuir PTs -->
                    <Button x:Name="BtnAtribuirPTs" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👨‍🏫 " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Atribuir PTs" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Separator -->
                    <Border Height="1" Background="#34495E" Margin="10,10"/>

                    <!-- Configurações -->
                    <Button x:Name="BtnConfig" Style="{StaticResource SidebarButtonStyle}"
                            Background="Transparent" 
                            BorderBrush="#34495E" 
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️ " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Configurações" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Logout -->
                    <Button x:Name="BtnLogout" Style="{StaticResource SidebarButtonStyle}"
                            Background="Transparent" 
                            BorderBrush="#c0392b" 
                            BorderThickness="1"
                            Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚪 " Foreground="#c0392b" FontSize="14"/>
                            <TextBlock Text="Logout" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area (Right) -->
        <Grid Background="#313443" Grid.Column="1">

            <!-- Header with FitControl Text -->
            <StackPanel x:Name="HeaderPanel" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Grid HorizontalAlignment="Center">
                    <TextBlock Text="FitControl" FontFamily="Lucida Sans Unicode"  Foreground="#e6e6e8" FontSize="42" FontWeight="Bold"/>
                </Grid>
            </StackPanel>

            <!-- Dashboard Content (Default View) -->
            <StackPanel x:Name="DashboardPanel" Margin="20,90,20,20" VerticalAlignment="Top">
                <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                        <!-- Total Members Card -->
                        <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="250">
                            <StackPanel>
                                <TextBlock Text="Total Membros" Foreground="#e6e6e8" FontSize="14"/>
                                <TextBlock x:Name="TotalMembers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#e6e6e8"/>
                            </StackPanel>
                        </Border>

                        <!-- Active Members Card -->
                        <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="250">
                            <StackPanel>
                                <TextBlock Text="Membros Ativos" Foreground="#e6e6e8" FontSize="14"/>
                                <TextBlock x:Name="ActiveMembers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#e6e6e8"/>
                            </StackPanel>
                        </Border>

                        <!-- Monthly Revenue Card -->
                        <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="250">
                            <StackPanel>
                                <TextBlock Text="Receita Mensal" Foreground="#e6e6e8" FontSize="14"/>
                                <TextBlock x:Name="MonthlyRevenue" Text="€0,00" FontSize="32" FontWeight="Bold" Foreground="#27AE60"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Recent Activity -->
                    <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="500" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Atividade Recente" FontSize="18" FontWeight="Bold" Foreground="#e6e6e8"/>
                            <ListView x:Name="RecentActivityList" Height="200" Margin="0,10,0,0" Style="{StaticResource ActivityListViewStyle}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Data" Width="100" DisplayMemberBinding="{Binding Date}"/>
                                        <GridViewColumn Header="Atividade" Width="300" DisplayMemberBinding="{Binding Description}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- User Management Panel -->
            <StackPanel x:Name="UserManagementPanel" Margin="20,90,20,20" VerticalAlignment="Top" Visibility="Collapsed">
                <TextBlock x:Name="UserManagementTitle"
                           Text="Gestão de Utilizadores"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#e6e6e8"
                           Margin="0,0,0,20"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="RefreshButton" 
                            Grid.Column="0"
                            Content="Atualizar" 
                            Click="RefreshButton_Click" 
                            Padding="15,8" Margin="0,0,10,0"
                            Background="#02acc3"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#02acc3"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0299b0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="CreateMembroButton" Content="Criar Membro" 
                                Click="CreateMembroButton_Click" 
                                Padding="15,8" Margin="0,0,10,0"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#27AE60"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#229954"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CreateFuncionarioButton" Content="Criar Funcionário" 
                                Click="CreateFuncionarioButton_Click" 
                                Padding="15,8" Margin="0,0,0,0"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#27AE60"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#229954"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <Border Background="#272936" CornerRadius="10" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="MembersDataGrid" Grid.Row="2"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              SelectionMode="Single"
              GridLinesVisibility="All"
              HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <!-- IDs -->
                                <DataGridTextColumn Header="ID User" Binding="{Binding IdUser}" Width="60"/>
                                <DataGridTextColumn Header="ID Membro" Binding="{Binding IdMembro}" Width="60"/>
                                <!-- Informações pessoais -->
                                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="150"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="Telemóvel" Binding="{Binding Telemovel}" Width="120"/>
                                <DataGridTextColumn Header="Data Nascimento" Binding="{Binding DataNascimento, StringFormat=dd/MM/yyyy}" Width="120"/>
                                <DataGridTextColumn Header="Data Registo" Binding="{Binding DataRegisto, StringFormat=dd/MM/yyyy}" Width="120"/>

                                <!-- Informação de subscrição/plano -->
                                <DataGridTextColumn Header="Subscrição" Binding="{Binding Subscricao}" Width="120"/>
                                <DataGridTextColumn Header="Plano Treino" Binding="{Binding PlanoTreino}" Width="120"/>

                                <!-- Status -->
                                <DataGridTextColumn Header="Data Desativação" Binding="{Binding DataDesativacao}" Width="120"/>
                                <DataGridCheckBoxColumn Header="Ativo" Binding="{Binding Ativo}" Width="60"/>

                                <!-- Ações -->
                                <DataGridTemplateColumn Header="Ações" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Editar" Click="EditButton_Click"
                                    Tag="{Binding IdUser}"
                                    Padding="5,2" Margin="2"/>
                                                <Button Content="Remover" Click="DeleteButton_Click"
                                    Tag="{Binding IdUser}"
                                    Padding="5,2" Margin="2"
                                    Background="LightCoral"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Border>

                <TextBlock x:Name="StatusText" 
                           Margin="0,15,0,0" 
                           Foreground="#95a5a6"
                           FontSize="14"/>
            </StackPanel>

            <!-- Exercise Management Panel -->
            <StackPanel x:Name="ExerciseManagementPanel" Margin="20,90,20,20" VerticalAlignment="Top" Visibility="Collapsed">
                <!-- Header with Search and Add Button -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search Bar -->
                    <Border Grid.Column="0" 
                            Background="#272936" 
                            CornerRadius="8" 
                            Padding="15,10" 
                            Margin="0,0,15,0"
                            VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" 
                                       Grid.Column="0" 
                                       FontSize="16" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       Foreground="#95a5a6"/>
                            <TextBox x:Name="ExerciseSearchTextBox"
                                     Grid.Column="1"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#e6e6e8"
                                     FontSize="14"
                                     TextChanged="ExerciseSearchTextBox_TextChanged"
                                     VerticalContentAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>
                    
                    <!-- Add Exercise Button -->
                    <Button x:Name="CreateExerciseButton" 
                            Grid.Column="1"
                            Content="+ Adicionar Exercício" 
                            Click="CreateExerciseButton_Click" 
                            Padding="20,10"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Exercises Grid -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="ExercisesItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#272936" 
                                        CornerRadius="12" 
                                        Margin="0,0,15,15"
                                        Padding="0"
                                        Width="350"
                                        Height="400">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="200"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Exercise Image -->
                                        <Border Grid.Row="0" 
                                                Background="#1f2937" 
                                                CornerRadius="12,12,0,0">
                                            <Grid>
                                                <Image Source="{Binding FotoUrl}"
                                                       Stretch="UniformToFill"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"/>
                                                <TextBlock Text="Sem Imagem" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"
                                                           Foreground="#95a5a6"
                                                           FontSize="14">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding FotoUrl}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding FotoUrl}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- Exercise Info -->
                                        <StackPanel Grid.Row="1" Margin="15" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Nome}" 
                                                       FontSize="18" 
                                                       FontWeight="Bold"
                                                       Foreground="#e6e6e8"
                                                       Margin="0,0,0,8"
                                                       TextWrapping="Wrap"/>
                                            
                                            <TextBlock Text="{Binding GrupoMuscular}" 
                                                       FontSize="14" 
                                                       Foreground="#02acc3"
                                                       Margin="0,0,0,12"/>
                                            
                                            <TextBlock Text="{Binding Descricao}" 
                                                       FontSize="12" 
                                                       Foreground="#95a5a6"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="80"
                                                       Margin="0,0,0,8"/>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <TextBlock Text="Estado: " 
                                                           FontSize="12" 
                                                           Foreground="#95a5a6"/>
                                                <TextBlock FontSize="12" 
                                                           FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Ativo"/>
                                                            <Setter Property="Foreground" Value="#27AE60"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Ativo}" Value="False">
                                                                    <Setter Property="Text" Value="Inativo"/>
                                                                    <Setter Property="Foreground" Value="#e74c3c"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Action Buttons -->
                                        <Border Grid.Row="2" 
                                                Background="#1f2937" 
                                                CornerRadius="0,0,12,12"
                                                Padding="15">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="✏️" 
                                                        Click="EditExerciseButton_Click"
                                                        Tag="{Binding IdExercicio}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="10"
                                                        Cursor="Hand"
                                                        ToolTip="Editar Exercício">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Foreground" Value="#02acc3"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Foreground" Value="#0299b0"/>
                                                                    <Setter Property="Background" Value="#272936"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Content="🗑️" 
                                                        Click="DeleteExerciseButton_Click"
                                                        Tag="{Binding IdExercicio}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="10"
                                                        Cursor="Hand"
                                                        ToolTip="Desativar Exercício">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Foreground" Value="#e74c3c"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Foreground" Value="#c0392b"/>
                                                                    <Setter Property="Background" Value="#272936"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock x:Name="ExerciseStatusText" 
                           Margin="0,15,0,0" 
                           Foreground="#95a5a6"
                           FontSize="14"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Payment Management Panel -->
            <StackPanel x:Name="PaymentManagementPanel" Margin="20,90,20,20" VerticalAlignment="Top" Visibility="Collapsed">
                <TextBlock Text="Gestão de Pagamentos"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#e6e6e8"
                           Margin="0,0,0,20"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="RefreshPaymentsButton" 
                            Grid.Column="0"
                            Content="Atualizar" 
                            Click="RefreshPaymentsButton_Click" 
                            Padding="15,8" Margin="0,0,10,0"
                            Background="#02acc3"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#02acc3"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0299b0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="CreatePaymentButton" 
                            Grid.Column="2"
                            Content="Criar Pagamento" 
                            Click="CreatePaymentButton_Click" 
                            Padding="15,8" Margin="0,0,0,0"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Border Background="#272936" CornerRadius="10" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="PaymentsDataGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  GridLinesVisibility="All"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding IdPagamento}" Width="60"/>
                                <DataGridTextColumn Header="ID Membro" Binding="{Binding IdMembro}" Width="80"/>
                                <DataGridTextColumn Header="ID Subscrição" Binding="{Binding IdSubscricao}" Width="100"/>
                                <DataGridTextColumn Header="Data Pagamento" Binding="{Binding DataPagamento, StringFormat=dd/MM/yyyy}" Width="120"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorPago, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Método" Binding="{Binding MetodoPagamento}" Width="100"/>
                                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoPagamento}" Width="100"/>
                                <DataGridTextColumn Header="Mês Referente" Binding="{Binding MesReferente, StringFormat=MM/yyyy}" Width="100"/>
                                <DataGridTemplateColumn Header="Ações" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Editar" Click="EditPaymentButton_Click"
                                                        Tag="{Binding IdPagamento}"
                                                        Padding="5,2" Margin="2"/>
                                                <Button Content="Desativar" Click="DeletePaymentButton_Click"
                                                        Tag="{Binding IdPagamento}"
                                                        Padding="5,2" Margin="2"
                                                        Background="LightCoral"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Border>

                <TextBlock x:Name="PaymentStatusText" 
                           Margin="0,15,0,0" 
                           Foreground="#95a5a6"
                           FontSize="14"/>
            </StackPanel>

            <!-- Physical Evaluation Management Panel -->
            <StackPanel x:Name="PhysicalEvaluationManagementPanel" Margin="20,90,20,20" VerticalAlignment="Top" Visibility="Collapsed">
                <TextBlock Text="Gestão de Avaliações Físicas"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#e6e6e8"
                           Margin="0,0,0,20"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="RefreshPhysicalEvaluationsButton" 
                            Grid.Column="0"
                            Content="Atualizar" 
                            Click="RefreshPhysicalEvaluationsButton_Click" 
                            Padding="15,8" Margin="0,0,10,0"
                            Background="#02acc3"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#02acc3"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0299b0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="CreatePhysicalEvaluationButton" 
                            Grid.Column="2"
                            Content="Criar Avaliação" 
                            Click="CreatePhysicalEvaluationButton_Click" 
                            Padding="15,8" Margin="0,0,0,0"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Border Background="#272936" CornerRadius="10" Padding="20">
                    <TextBlock x:Name="PhysicalEvaluationStatusText" 
                               Text="Selecione um membro para ver avaliações físicas"
                               Foreground="#95a5a6"
                               FontSize="14"/>
                </Border>
            </StackPanel>

            <!-- Settings Panel -->
            <ScrollViewer x:Name="SettingsPanel" 
                         Margin="20,90,20,20" 
                         VerticalAlignment="Top" 
                         Visibility="Collapsed"
                         VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Configurações"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#e6e6e8"
                               Margin="0,0,0,30"/>

                    <!-- Account Information -->
                    <Border Background="#272936" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Informações da Conta" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#e6e6e8"
                                       Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Tipo de Conta:" 
                                           Foreground="#95a5a6" 
                                           FontSize="14" 
                                           Margin="0,0,0,15"/>
                                <TextBlock x:Name="AccountTypeText" 
                                           Grid.Row="0" Grid.Column="1" 
                                           Text="-" 
                                           Foreground="#e6e6e8" 
                                           FontSize="14" 
                                           Margin="0,0,0,15"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Nome:" 
                                           Foreground="#95a5a6" 
                                           FontSize="14" 
                                           Margin="0,0,0,15"/>
                                <TextBlock x:Name="AccountNameText" 
                                           Grid.Row="1" Grid.Column="1" 
                                           Text="-" 
                                           Foreground="#e6e6e8" 
                                           FontSize="14" 
                                           Margin="0,0,0,15"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Contacto:" 
                                           Foreground="#95a5a6" 
                                           FontSize="14" 
                                           Margin="0,0,0,15"/>
                                <TextBlock x:Name="AccountContactText" 
                                           Grid.Row="2" Grid.Column="1" 
                                           Text="-" 
                                           Foreground="#e6e6e8" 
                                           FontSize="14" 
                                           Margin="0,0,0,15"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                           Text="Função:" 
                                           Foreground="#95a5a6" 
                                           FontSize="14"/>
                                <TextBlock x:Name="AccountFunctionText" 
                                           Grid.Row="3" Grid.Column="1" 
                                           Text="-" 
                                           Foreground="#e6e6e8" 
                                           FontSize="14"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Account Settings -->
                    <Border Background="#272936" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Account Settings" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#e6e6e8"
                                       Margin="0,0,0,20"/>
                            
                            <!-- Email -->
                            <TextBlock Text="Email" 
                                       Foreground="#95a5a6" 
                                       FontSize="14" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="SettingsEmailTextBox" 
                                     Padding="12,10" 
                                     FontSize="14"
                                     Background="#1f2937"
                                     Foreground="#e6e6e8"
                                     BorderBrush="#34495E"
                                     BorderThickness="1"
                                     IsReadOnly="True"
                                     Margin="0,0,0,20">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#02acc3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Password -->
                            <TextBlock Text="Palavra-passe" 
                                       Foreground="#95a5a6" 
                                       FontSize="14" 
                                       Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="SettingsPasswordBox" 
                                             Grid.Column="0"
                                             Padding="12,10" 
                                             FontSize="14"
                                             Background="#1f2937"
                                             Foreground="#e6e6e8"
                                             BorderBrush="#34495E"
                                             BorderThickness="1"
                                             IsEnabled="False"
                                             Password="••••••••"
                                             Margin="0,0,10,0">
                                    <PasswordBox.Style>
                                        <Style TargetType="PasswordBox">
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#02acc3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </PasswordBox.Style>
                                </PasswordBox>
                                <Button x:Name="ChangePasswordButton" 
                                        Grid.Column="1"
                                        Content="Alterar" 
                                        Click="ChangePasswordButton_Click"
                                        VerticalAlignment="Center"
                                        Padding="15,8"
                                        Background="#02acc3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontSize="14"
                                        Width="100">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#02acc3"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#0299b0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Placeholder for other sections -->
            <TextBlock x:Name="PlaceholderText"
                       Text="Seleciona uma opção no menu"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="22"
                       Foreground="#7F8C8D"
                       Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
