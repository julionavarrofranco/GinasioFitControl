<Window x:Class="FitControlAdmin.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FitControlAdmin"
        xmlns:converters="clr-namespace:FitControlAdmin.Converters"
        Title="FitControl - Gestor de GinÃ¡sio"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:EnumNameConverter x:Key="EnumNameConverter"/>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        
        <Style TargetType="{x:Type Button}" x:Key="SidebarButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView Style for Recent Activity -->
        <Style TargetType="{x:Type ListView}" x:Key="ActivityListViewStyle">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- GridViewColumnHeader Style -->
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="#1a4d5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#153d4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Role" Value="Floating">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListViewItem Style -->
        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Background" Value="#1f2937"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0" 
                                Padding="{TemplateBinding Padding}"
                                Margin="0,1,0,0">
                            <GridViewRowPresenter Content="{TemplateBinding Content}" 
                                                  Columns="{TemplateBinding GridView.ColumnCollection}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2a3f4f"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1a4d5c"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style to match Dashboard table -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#323544"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#323544"/>
            <Setter Property="AlternatingRowBackground" Value="#323544"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#34495E"/>
            <Setter Property="VerticalGridLinesBrush" Value="#34495E"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- DataGridColumnHeader Style -->
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#1a4d5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#153d4a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGridRow Style -->
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="#323544"/>
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Margin="0,1,0,0">
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1" 
                                                       ItemsPanel="{TemplateBinding ItemsPanel}"
                                                       SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <DataGridDetailsPresenter Grid.Column="1" 
                                                         Grid.Row="1"
                                                         SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                         Visibility="{TemplateBinding DetailsVisibility}"/>
                                <DataGridRowHeader Grid.RowSpan="2" 
                                                  SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                  Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </SelectiveScrollingGrid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2a3f4f"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1a4d5c"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGridCell Style -->
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style for DataGrid -->
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="#e6e6e8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border"
                                    Grid.Column="0"
                                    Width="18"
                                    Height="18"
                                    Background="#34495E"
                                    BorderBrush="#1a4d5c"
                                    BorderThickness="2"
                                    CornerRadius="2">
                                <Path x:Name="CheckMark"
                                      Data="M 0 5 L 5 10 L 12 0"
                                      Stroke="#27AE60"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="Background" Value="#27AE60"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#27AE60"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#02acc3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu (Left) -->
        <Border Grid.Column="0" Background="#272936">
            <StackPanel>
                <!-- Header -->
                <Border Background="#272936" Padding="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="FitControl" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#e6e6e8"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="0,10,0,0">
                    <!-- Dashboard -->
                    <Button x:Name="BtnDashboard" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Dashboard" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- FuncionÃ¡rios -->
                    <Button x:Name="BtnFuncionarios" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¨â€ðŸ’¼ " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="FuncionÃ¡rios" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Membros -->
                    <Button x:Name="BtnMembros" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥ " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Membros" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- SubscriÃ§Ãµes -->
                    <Button x:Name="BtnSubscricoes" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹ " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="SubscriÃ§Ãµes" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Pagamentos -->
                    <Button x:Name="BtnPagamentos" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’° " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Pagamentos" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Aulas -->
                    <Button x:Name="BtnAulas" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“š " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Aulas" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- ExercÃ­cios -->
                    <Button x:Name="BtnExercicios" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’ª " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="ExercÃ­cios" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- AvaliaÃ§Ãµes FÃ­sicas (apenas PT) -->
                    <Button x:Name="BtnAvaliacoesFisicas" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="AvaliaÃ§Ãµes FÃ­sicas" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Planos de Treino (apenas PT) -->
                    <Button x:Name="BtnPlanosTreino" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹ " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="Planos de Treino" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Separator -->
                    <Border Height="1" Background="#34495E" Margin="10,10"/>

                    <!-- ConfiguraÃ§Ãµes -->
                    <Button x:Name="BtnConfig" Style="{StaticResource SidebarButtonStyle}"
                            Background="Transparent" 
                            BorderBrush="#34495E" 
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸ " Foreground="#02acc3" FontSize="14"/>
                            <TextBlock Text="ConfiguraÃ§Ãµes" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Logout -->
                    <Button x:Name="BtnLogout" Style="{StaticResource SidebarButtonStyle}"
                            Background="Transparent" 
                            BorderBrush="#c0392b" 
                            BorderThickness="1"
                            Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸšª " Foreground="#c0392b" FontSize="14"/>
                            <TextBlock Text="Logout" Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area (Right) -->
        <Grid Background="#313443" Grid.Column="1">

            <!-- Header with FitControl Text -->
            <StackPanel x:Name="HeaderPanel" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Grid HorizontalAlignment="Center">
                    <TextBlock Text="FitControl" FontFamily="Lucida Sans Unicode"  Foreground="#e6e6e8" FontSize="42" FontWeight="Bold"/>
                </Grid>
            </StackPanel>

            <!-- Dashboard Content (Default View) -->
            <StackPanel x:Name="DashboardPanel" Margin="20,90,20,20" VerticalAlignment="Top">
                <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                        <!-- Total Members Card -->
                        <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="250">
                            <StackPanel>
                                <TextBlock Text="Total Membros" Foreground="#e6e6e8" FontSize="14"/>
                                <TextBlock x:Name="TotalMembers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#e6e6e8"/>
                            </StackPanel>
                        </Border>

                        <!-- Active Members Card -->
                        <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="250">
                            <StackPanel>
                                <TextBlock Text="Membros Ativos" Foreground="#e6e6e8" FontSize="14"/>
                                <TextBlock x:Name="ActiveMembers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#e6e6e8"/>
                            </StackPanel>
                        </Border>

                        <!-- Monthly Revenue Card -->
                        <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="250">
                            <StackPanel>
                                <TextBlock Text="Receita Mensal" Foreground="#e6e6e8" FontSize="14"/>
                                <TextBlock x:Name="MonthlyRevenue" Text="â‚¬0,00" FontSize="32" FontWeight="Bold" Foreground="#27AE60"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Recent Activity -->
                    <Border Background="#272936" CornerRadius="10" Margin="10" Padding="20" Width="500" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Atividade Recente" FontSize="18" FontWeight="Bold" Foreground="#e6e6e8"/>
                            <ListView x:Name="RecentActivityList" Height="200" Margin="0,10,0,0" Style="{StaticResource ActivityListViewStyle}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Data" Width="100" DisplayMemberBinding="{Binding Date}"/>
                                        <GridViewColumn Header="Atividade" Width="300" DisplayMemberBinding="{Binding Description}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- User Management Panel -->
            <StackPanel x:Name="UserManagementPanel" Margin="20,90,20,20" VerticalAlignment="Top" Visibility="Collapsed">
                <TextBlock x:Name="UserManagementTitle"
                           Text="GestÃ£o de Utilizadores"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#e6e6e8"
                           Margin="0,0,0,20"/>

                <!-- Search and Actions -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="RefreshButton"
                            Grid.Column="0"
                            Content="Atualizar"
                            Click="RefreshButton_Click"
                            Padding="15,8" Margin="0,0,10,0"
                            Background="#02acc3"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#02acc3"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0299b0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Search Box -->
                    <Border Grid.Column="1"
                            Background="#1f2937"
                            CornerRadius="6"
                            Padding="10,8"
                            Margin="0,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”"
                                       Grid.Column="0"
                                       Foreground="#95a5a6"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBox x:Name="UserSearchTextBox"
                                     Grid.Column="1"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#95a5a6"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TextChanged="UserSearchTextBox_TextChanged"
                                     GotFocus="UserSearchTextBox_GotFocus"
                                     LostFocus="UserSearchTextBox_LostFocus"
                                     CaretBrush="White"
                                     Tag="Pesquisar por nome...">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Text" Value="Pesquisar por nome..."/>
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="Foreground" Value="#e6e6e8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="CreateMembroButton" Content="Criar Membro"
                                Click="CreateMembroButton_Click"
                                Padding="15,8" Margin="0,0,0,0"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="14">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#27AE60"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#229954"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <Border Background="#272936" CornerRadius="10" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="MembersDataGrid" Grid.Row="2"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              SelectionMode="Single"
              GridLinesVisibility="All"
              HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <!-- IDs -->
                                <DataGridTextColumn Header="ID User" Binding="{Binding IdUser}" Width="60"/>
                                <DataGridTextColumn Header="ID Membro" Binding="{Binding IdMembro}" Width="60"/>
                                <!-- InformaÃ§Ãµes pessoais -->
                                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="150"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="TelemÃ³vel" Binding="{Binding Telemovel}" Width="120"/>
                                <DataGridTextColumn Header="Data Nascimento" Binding="{Binding DataNascimento, StringFormat=dd/MM/yyyy}" Width="120"/>
                                <DataGridTextColumn Header="Data Registo" Binding="{Binding DataRegisto, StringFormat=dd/MM/yyyy}" Width="120"/>

                                <!-- InformaÃ§Ã£o de subscriÃ§Ã£o/plano -->
                                <DataGridTextColumn Header="SubscriÃ§Ã£o" Binding="{Binding Subscricao}" Width="120"/>
                                <DataGridTextColumn Header="Plano Treino" Binding="{Binding PlanoTreino}" Width="120"/>

                                <!-- Status -->
                                <DataGridTextColumn Header="Data DesativaÃ§Ã£o" Binding="{Binding DataDesativacao}" Width="120"/>
                                <DataGridCheckBoxColumn Header="Ativo" Binding="{Binding Ativo}" Width="60"/>

                                <!-- AÃ§Ãµes -->
                                <DataGridTemplateColumn Header="AÃ§Ãµes" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" DataContext="{Binding}">
                                                <Button Content="Editar" Click="EditButton_Click"
                                    Tag="{Binding IdUser}"
                                    Padding="8,4" Margin="2"
                                    Background="#02acc3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="12">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="#02acc3"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#0299b0"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <Button Content="Remover" Click="DeleteButton_Click"
                                    Tag="{Binding IdUser}"
                                    Padding="8,4" Margin="2"
                                    Background="#e74c3c"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="12">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="#e74c3c"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#c0392b"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Border>

                <TextBlock x:Name="StatusText" 
                           Margin="0,15,0,0" 
